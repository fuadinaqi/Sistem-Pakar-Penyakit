<!DOCTYPE html>
<html>
<% include ./partials/head %>

  <body>
    <% include ./partials/navigation %>
    <h1>Diagnosa</h1>
    <a href="/diagnosas/add">Add Diagnosa </a>
    <table class="table">
      <thead class="thead-dark">
      <tr>
        <th>No</th>
        <th>Nama Penyakit</th>
        <th>Action</th>
      </tr>
    </thead>

      <% let count = 1 %>
        <% dataDiagnosas.forEach(function(diagnosa) { %>
          <tr>
            <td>
              <%= count %>
            </td>
            <td>
              <%= diagnosa.namaPenyakit %>
            </td>
            <td>
              <a href="/diagnosas/listObat/<%= diagnosa.id %>">List Obat</a>
              |
              <a href="/diagnosas/assignObat/<%= diagnosa.id %>">Assign Obat</a>
              |
              <a href="/diagnosas/edit/<%= diagnosa.id %>">Edit</a>
              |
              <a href="/diagnosas/delete/<%= diagnosa.id %>" onclick="return confirm(`Apakah anda yakin menghapusnya?`)">Delete</a>
            </td>
          </tr>
          <% count++ %>
            <% }) %>
    </table>
  </body>

</html>
